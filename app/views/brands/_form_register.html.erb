<%= form_for brand do |f| %>
    <%if brand.errors.any?%>
      <div class = "alert alert-danger">
        <h4><%= pluralize(brand.errors.count, "error")%>.</h4>
        <ul>
          <% brand.errors.full_messages.each do |msg|%>
            <li><%=msg%></li>
          <%end%>
        </ul>
      </div>
    <%end%>


    <%= form_group_tag(brand.errors[:domain]) do %>
     <%= f.label :domain %>
     <%= f.text_field :domain, class: 'form-control', placeholder: "Enter Company Email Domain (@airbnb.com)" %>
    <%end%>

   <div class="form-group">
     <%= f.submit "Register Brand", class: 'btn btn-success' %>
   </div>
 <% end %>
